global:
  slack_api_url: "{{ slack_webhook_url }}"

  smtp_require_tls: false
route:
  receiver: 'DevOps'
  group_by: [alertname, InstanceState]
  group_interval: 5m
  repeat_interval: 30m


receivers:
- name: 'DevOps'
  slack_configs:
  - channel: '#monitoring'
    text: "{% raw %} <!channel> \nsummary: {{ .CommonAnnotations.summary }}\ndescription: {{ .CommonAnnotations.description }} {% endraw %} "
#    http_config: 
#    - oauth2:
#      client_id: "@dev-alerting"
#      scopes:
#      - {{ slack_token }} 
  email_configs:
{% for receiver in note_receiver %}
  - to: "{{ receiver }}"  
    from: "{{ smtp_login }}" 
    smarthost: "{{ sending_host }}:{{ smtp_port }}"
    auth_username: "{{ smtp_login }}"
    auth_identity: "{{ smtp_login }}" 
    auth_password: "{{ smtp_pwd }}"
{% endfor %}
